<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_gcal" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.gcal</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//div[hasclass('settings')]" position="after">
        		<h2>Google calender configuration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="secrete"/>
                            </div>

                            <div class="o_setting_right_pane" id="crm_iap_lead_website_settings">
                                <label string="Upload Json token file here" for="secrete"/>
                                <div class="text-muted">
                                    Google calendar Json token file.
                                </div>
                            </div>
                        </div>
                    </div>
        	</xpath>
        </field>
    </record>
</odoo>